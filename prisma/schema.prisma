generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url  	= env("DATABASE_URL")
  relationMode = "prisma"
}

model Event {
  id        Int @id @default(autoincrement())
  slug      String @unique
  title     String?
  date      String?
  organizer String?
  category  String?
  member  Member[]
}

model Member {
 id Int @id @default(autoincrement())
 events Event @relation(fields: [eventsId], references: [id])
 eventsId Int


 @@index([eventsId])
}